<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
        rel="stylesheet">
        <link rel="stylesheet" href="/index.css">
</head>

<body>
    <header>
        <h3 class="logo">Xem phim</h3>
         <form action="/" method="get"><button class="top-phim">home</button></form>
        <form action="/search" method="post"> <input class="entersearch" type="text" name="search" id=""> <input class="searchok" type="submit" value="search">
        </form>
    </header>
    <div class="display" >
    <section class="content">
        
        <% if(locals.play) {%>
        <iframe class="film" src="<%= play %>"
            title="Iframe Example" allowfullscreen></iframe> <% } %>
            <% if(locals.title) {%>
            <div class="title"><h3><%=title %></h3></div> 
            <% } %>
            <div class="ep">
                <form action="/change" method="post">
                    <div class="btnc">
                        <% for (let i = 0; i < locals.ep; i++) { %>
                            <input class="btn" name="epp" type="submit" value="<%= i+1 %>" onclick="highlightButton(this)">
                          <% } %>
                          
                          <script>
                            let activeButton = null;
                          
                            function highlightButton(button) {
                              // Hủy kích hoạt nút trước đó
                              if (activeButton) {
                                activeButton.style.backgroundColor = ''; // Đặt lại màu nền mặc định
                              }
                          
                              // Kích hoạt nút mới
                              activeButton = button;
                              activeButton.style.backgroundColor = '#4CAF50'; // Đặt màu nền mới
                            }
                          </script>
                          
                </div>
                </form>
                
            </div>
      
    </section>
    <section class="recomand">
        <div class="mota" >
            <% if(locals.mota) { %>
                <img class="poster" src="<%=hinhanh  %>" alt="">
                <h3 class="tenphim"><%= tenphim %></h3>
                <p class="noidung" ><%= mota %>
                <h4 class="sotap"><%=hientai  %> / <%= daydu %></h4>
                <h4 class="year"><%= nam %></h4>


                <% } %>
        </div>
    </section>
    <% if (locals.error) {%>
        <script>alert("khong tim thay phim vui long thu lai ");</script> <% } %>
</div>
</body>

</html>